<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_daily">

    <TextView
        android:id="@+id/tv_week"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Fri"
        android:textColor="#ff111115"
        android:layout_marginStart="18dp"
        android:gravity="start|center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent" />


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_week"
        app:layout_constraintStart_toEndOf="@+id/tv_week"
        app:layout_constraintTop_toTopOf="@+id/tv_week" />

    <TextView
        android:id="@+id/tv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3/31"
        android:textColor="#ff111115"
        android:textSize="14sp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_week"
        app:layout_constraintEnd_toStartOf="@+id/tv_temp"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toTopOf="@+id/tv_week" />

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="13℃/22℃"
        android:textColor="#ff111115"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_week"
        app:layout_constraintTop_toTopOf="@+id/tv_week" />
</androidx.constraintlayout.widget.ConstraintLayout>