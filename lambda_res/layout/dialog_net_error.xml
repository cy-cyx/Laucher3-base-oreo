<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ffffff_radius_15"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_net_disconnect" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:text="@string/net_error_tip"
        android:textColor="#FF252525"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/connectNowTv"
            android:layout_width="130dp"
            android:layout_height="43dp"
            android:background="@drawable/shape_d2e8fb_radius_8"
            android:gravity="center"
            android:text="@string/connect_now"
            android:textColor="#FF208AF4"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/retryTv"
            android:layout_width="130dp"
            android:layout_height="43dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/shape_ff208af4_radius_8"
            android:gravity="center"
            android:text="@string/retry"
            android:textColor="#ffffff"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>