<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/day_forecast_7"
        android:textColor="#ff111115"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_bg1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="3dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_home_low_temp"
        app:layout_constraintEnd_toEndOf="@+id/view_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <ImageView
        android:id="@+id/iv_bg2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_home_rain_g"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_center"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lowest_temperature"
        android:layout_marginBottom="20dp"
        android:textColor="#ff111115"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_low_temp"
        app:layout_constraintTop_toBottomOf="@+id/tv_low_temp" />

    <TextView
        android:id="@+id/tv_low_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3℃"
        android:layout_marginStart="13dp"
        android:textSize="21sp"
        android:layout_marginTop="20dp"
        android:textColor="#ff111115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_1"
        app:layout_constraintTop_toTopOf="@+id/iv_bg1" />


    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_of_rain"
        android:layout_marginBottom="20dp"
        android:textColor="#ff111115"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/tv_rain"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg2"
        app:layout_constraintTop_toBottomOf="@+id/tv_rain" />

    <TextView
        android:id="@+id/tv_rain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="4/8  3℃"
        android:layout_marginStart="13dp"
        android:textSize="21sp"
        android:textColor="#ff111115"
        app:layout_constraintBottom_toTopOf="@+id/tv_2"
        app:layout_constraintStart_toStartOf="@+id/iv_bg2"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>