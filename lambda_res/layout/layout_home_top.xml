<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_temperature"
            style="@style/title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:shadowColor="#26000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3.0"
            android:text="17"
            android:textColor="#ffffffff"
            android:textSize="67sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_real_feel"
            app:layout_constraintEnd_toEndOf="@+id/view_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_weather" />

        <TextView
            android:id="@+id/tv_unit"
            style="@style/title_style"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:drawableEnd="@drawable/ic_down_flag"
            android:drawablePadding="5dp"
            android:includeFontPadding="false"
            android:shadowColor="#26000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3.0"
            android:text="@string/temp_unit"
            android:textColor="#ffffffff"
            android:textSize="33sp"
            app:layout_constraintStart_toEndOf="@+id/tv_temperature"
            app:layout_constraintTop_toTopOf="@+id/tv_temperature" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tv_unit"
            app:layout_constraintStart_toStartOf="@+id/tv_unit"
            app:layout_constraintTop_toBottomOf="@+id/tv_unit" />


        <TextView
            style="@style/title_style"
            android:id="@+id/tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:shadowColor="#26000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3.0"
            android:text="Most Cloudy"
            android:textColor="#ffffffff"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_weather"
            app:layout_constraintStart_toStartOf="@+id/iv_weather"
            app:layout_constraintTop_toBottomOf="@+id/iv_weather" />

        <TextView
            android:id="@+id/tv_real_feel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/realfeel"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/lly_temp"
            app:layout_constraintEnd_toEndOf="@+id/lly_temp"
            app:layout_constraintStart_toStartOf="@+id/lly_temp"
            app:layout_constraintTop_toBottomOf="@+id/tv_temperature" />

        <LinearLayout
            android:id="@+id/lly_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_home_top_min_temp_bg"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_weather"
            app:layout_constraintEnd_toEndOf="@+id/tv_unit"
            app:layout_constraintStart_toStartOf="@+id/tv_temperature"
            app:layout_constraintTop_toBottomOf="@+id/tv_real_feel">

            <TextView
                android:id="@+id/tv_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_max"
                android:drawablePadding="3dp"
                android:shadowColor="#26000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="28℃"
                android:textColor="#FF7129"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_min"
                app:layout_constraintStart_toStartOf="@+id/tv_weather"
                app:layout_constraintTop_toBottomOf="@+id/tv_weather" />

            <TextView
                android:id="@+id/tv_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_min"
                android:drawablePadding="3dp"
                android:shadowColor="#26000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="28℃"
                android:textColor="#1C99F1"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_max"
                app:layout_constraintEnd_toEndOf="@+id/tv_weather"
                app:layout_constraintStart_toEndOf="@+id/tv_max"
                app:layout_constraintTop_toTopOf="@+id/tv_max" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="10dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view_center"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/lly_wind"
            android:layout_width="170dp"
            android:layout_height="34dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_wind_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lly_temp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wind" />

            <TextView
                android:id="@+id/tv_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:text="5.50mph"
                android:textColor="#ffffffff"
                android:textSize="13sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/include_layout_home_warning"
        layout="@layout/layout_home_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cl_top" />

</androidx.constraintlayout.widget.ConstraintLayout>