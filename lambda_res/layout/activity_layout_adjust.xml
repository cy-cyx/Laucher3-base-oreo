<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_top_bg" />

    <LinearLayout
        android:id="@+id/containerLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/layout"
                android:textColor="#FF000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/backIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="7dp"
                android:padding="10dp"
                android:src="@drawable/ic_back3" />
        </FrameLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6f6f6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="13dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_ffffff_radius_10"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/homeScreenFl"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/ic_layout_home" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="56dp"
                            android:text="@string/text_home_screen"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/homeScreenNextIv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/ic_next" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/homeScreenLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:background="#d0d0d0" />

                        <TextView
                            android:id="@+id/gridNumTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="27dp"
                            android:layout_marginTop="20dp"
                            android:text="Grid 4*5"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginTop="20dp">

                            <com.theme.lambda.launcher.widget.LayoutPreviewView
                                android:id="@+id/layoutPreviewLpv"
                                android:layout_width="match_parent"
                                android:layout_height="290dp"
                                android:layout_marginEnd="54dp"
                                android:layout_marginBottom="54dp" />

                            <com.theme.lambda.launcher.widget.pickview.StringScrollPicker
                                android:id="@+id/rowPicker"
                                android:layout_width="30dp"
                                android:layout_height="90dp"
                                android:layout_gravity="end|center_vertical"
                                app:spv_end_color="#FFB2B2B2"
                                app:spv_max_text_size="19dp"
                                app:spv_min_text_size="15dp"
                                app:spv_start_color="#FF208AF4" />

                            <com.theme.lambda.launcher.widget.pickview.StringScrollPicker
                                android:id="@+id/columnPicker"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:layout_gravity="bottom|center_horizontal"
                                app:spv_end_color="#FFB2B2B2"
                                app:spv_max_text_size="19dp"
                                app:spv_min_text_size="15dp"
                                app:spv_orientation="horizontal"
                                app:spv_start_color="#FF208AF4" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/homeScreenApplyTv"
                            android:layout_width="300dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="26dp"
                            android:layout_marginBottom="17dp"
                            android:background="@drawable/shape_ff208af4_radius_8"
                            android:gravity="center"
                            android:text="@string/apply"
                            android:textColor="#ffffff"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>