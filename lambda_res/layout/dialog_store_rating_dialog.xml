<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ffffff_radius_15"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_rate_us_dialog_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:text="@string/rate_us"
        android:textColor="#FF000000"
        android:textSize="19dp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="6dp">


        <LinearLayout
            android:id="@+id/starLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/starIv1"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_gray" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/starIv2"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_gray" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/starIv3"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_gray" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/starIv4"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_gray" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/starIv5"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_star_gray" />
        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/guideLav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:lottie_rawRes="@raw/rateus" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:lineHeight="24dp"
        android:text="@string/rate_us_tip"
        android:textColor="#FF000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/submitTv"
        android:layout_width="284dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_ff208af4_radius_8"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="#FFFFFFFF"
        android:textSize="17dp"
        android:textStyle="bold" />
</LinearLayout>