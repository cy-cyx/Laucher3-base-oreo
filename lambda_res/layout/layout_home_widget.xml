<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_home_module_bg">
    <TextView
        android:id="@+id/tv_title"
        style="@style/title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_widget"
        android:textColor="#ff111115"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/iv_home_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_close"
        android:tint="#ff111115"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_widget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp" />


    <TextView
        android:id="@+id/tv_live_weather_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/live_weather_des"
        android:textColor="#ff111115"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_widget"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:id="@+id/rg_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_live_weather_des"
        android:layout_marginTop="10dp"
        >

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/selector_home_widget"
            />
        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:button="@null"
            android:background="@drawable/selector_home_widget"
            android:layout_marginStart="5dp"/>
        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:button="@null"
            android:background="@drawable/selector_home_widget"
            android:layout_marginStart="5dp"/>

        <RadioButton
            android:id="@+id/rb_4"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:button="@null"
            android:background="@drawable/selector_home_widget"
            android:layout_marginStart="5dp" />

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_add"
        style="@style/title_style"
        android:layout_marginBottom="20dp"
        android:includeFontPadding="false"
        android:text="@string/add"
        android:layout_width="176dp"
        android:layout_height="37dp"
        android:textColor="@color/color_btn_text"
        android:orientation="horizontal"
        android:background="@drawable/shape_wind_bg"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_live_weather_des"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="17sp" />
</androidx.constraintlayout.widget.ConstraintLayout>