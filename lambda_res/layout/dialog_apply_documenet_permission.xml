<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ffffff_radius_15"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_doc_permission_top" />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="@string/doc_permission_tip"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/allowTv"
        android:layout_width="284dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:background="@drawable/shape_208af4_radius_8"
        android:gravity="center"
        android:text="@string/allow"
        android:textColor="#ffffff"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/notNowTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:text="@string/not_now"
        android:textColor="#FF666666"
        android:textSize="15dp" />

</LinearLayout>