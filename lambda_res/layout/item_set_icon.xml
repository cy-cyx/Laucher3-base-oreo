<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="83dp">

    <ImageView
        android:id="@+id/radioIv"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:padding="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="11dp"
        android:src="@drawable/ic_radio_bn_unselect" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="13dp"
        android:background="#FFB3B3B3" />

    <androidx.cardview.widget.CardView
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="65dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iconIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="136dp"
        android:src="@drawable/ic_arrow" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="180dp">

        <androidx.cardview.widget.CardView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginVertical="3dp"
            android:layout_marginEnd="3dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/appIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_set_icon_add" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/editIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_edit" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="79dp"
        android:layout_height="29dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="22dp">

        <FrameLayout
            android:id="@+id/downloadFl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_set_icon1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="@string/install"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />
            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/adBnIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_set_icon_ad_bn" />

    </FrameLayout>
</FrameLayout>